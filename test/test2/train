param_grid = {
    'iterations': [800, 1000, 1500],        # Больше итераций → лучше обучение (но дольше)
    'learning_rate': [0.01, 0.03, 0.05],    # Меньше → стабильнее, но медленнее
    'depth': [6, 8, 10],                    # Глубина деревьев (не >10 для временных рядов)
    'l2_leaf_reg': [1, 3, 5, 7],            # Регуляризация (меньше переобучение)
    'rsm': [0.8, 0.9, 1.0],                 # Доля признаков на каждом сплите (аналог max_features)
    'min_data_in_leaf': [5, 10, 20],        # Минимум данных в листе → меньше шума
    'random_seed': [42]
}
