'''–î–ª—è –ø—Ä–µ–¥—Å–∫–∞–∑–∞–Ω–∏—è –Ω–∞ 1-3 –¥–Ω—è –≤–ø–µ—Ä–µ–¥ –Ω—É–∂–Ω—ã –∏—Å—Ç–æ—Ä–∏—á–µ—Å–∫–∏–µ –¥–∞–Ω–Ω—ã–µ –∑–∞:

–ú–∏–Ω–∏–º—É–º 1 –Ω–µ–¥–µ–ª—è (168 —á–∞—Å–æ–≤) - –¥–ª—è –ª–∞–≥–∞ consumption_lag_168
–û–ø—Ç–∏–º–∞–ª—å–Ω–æ 2 –Ω–µ–¥–µ–ª–∏ - –¥–ª—è –ª—É—á—à–µ–π —Ç–æ—á–Ω–æ—Å—Ç–∏ —Å–∫–æ–ª—å–∑—è—â–∏—Ö —Å—Ä–µ–¥–Ω–∏—Ö

–í—Ö–æ–¥–Ω—ã–µ –¥–∞–Ω–Ω—ã–µ –¥–ª—è –ø—Ä–µ–¥—Å–∫–∞–∑–∞–Ω–∏—è:

'''

# –î–ª—è –∫–∞–∂–¥–æ–≥–æ —á–∞—Å–∞ –ø—Ä–µ–¥—Å–∫–∞–∑–∞–Ω–∏—è –Ω—É–∂–Ω—ã:
INPUT_FEATURES = {
    # –í—Ä–µ–º–µ–Ω–Ω—ã–µ –ø—Ä–∏–∑–Ω–∞–∫–∏
    'hour': 0-23,           # –ß–∞—Å –ø—Ä–µ–¥—Å–∫–∞–∑–∞–Ω–∏—è
    'dayofweek': 0-6,       # –î–µ–Ω—å –Ω–µ–¥–µ–ª–∏
    'month': 1-12,          # –ú–µ—Å—è—Ü
    
    # –ü–æ–≥–æ–¥–Ω—ã–µ –¥–∞–Ω–Ω—ã–µ –Ω–∞ –º–æ–º–µ–Ω—Ç –ø—Ä–µ–¥—Å–∫–∞–∑–∞–Ω–∏—è
    'temperature': float,   # –¢–µ–º–ø–µ—Ä–∞—Ç—É—Ä–∞
    'humidity': float,      # –í–ª–∞–∂–Ω–æ—Å—Ç—å
    'wind_speed': float,    # –°–∫–æ—Ä–æ—Å—Ç—å –≤–µ—Ç—Ä–∞
    
    # –õ–∞–≥–æ–≤—ã–µ –ø—Ä–∏–∑–Ω–∞–∫–∏ (–∏—Å—Ç–æ—Ä–∏—á–µ—Å–∫–∏–µ –¥–∞–Ω–Ω—ã–µ)
    'consumption_lag_1': float,    # 1 —á–∞—Å –Ω–∞–∑–∞–¥
    'consumption_lag_2': float,    # 2 —á–∞—Å–∞ –Ω–∞–∑–∞–¥
    'consumption_lag_3': float,    # 3 —á–∞—Å–∞ –Ω–∞–∑–∞–¥
    'consumption_lag_24': float,   # 24 —á–∞—Å–∞ –Ω–∞–∑–∞–¥
    'consumption_lag_48': float,   # 48 —á–∞—Å–æ–≤ –Ω–∞–∑–∞–¥
    'consumption_lag_168': float,  # 168 —á–∞—Å–æ–≤ –Ω–∞–∑–∞–¥ (–Ω–µ–¥–µ–ª—è)
    
    # –°–∫–æ–ª—å–∑—è—â–∏–µ –ø—Ä–∏–∑–Ω–∞–∫–∏ (—Ä–∞—Å—Å—á–∏—Ç—ã–≤–∞—é—Ç—Å—è –∏–∑ –∏—Å—Ç–æ—Ä–∏—á–µ—Å–∫–∏—Ö –¥–∞–Ω–Ω—ã—Ö)
    'consumption_rolling_mean_3': float,
    'consumption_rolling_mean_6': float,
    'consumption_rolling_mean_12': float,
    'consumption_rolling_mean_24': float,
    'consumption_rolling_std_3': float,
    'consumption_rolling_std_6': float,
    'consumption_rolling_std_12': float,
    'consumption_rolling_std_24': float,
    
    # –ö–∞–ª–µ–Ω–¥–∞—Ä–Ω—ã–µ –ø—Ä–∏–∑–Ω–∞–∫–∏
    'is_holiday': 0/1,
    'is_working_day': 0/1,
    'is_weekend': 0/1,
    'is_weekend_or_holiday': 0/1
}


# –ù—É–∂–Ω—ã –¥–∞–Ω–Ω—ã–µ –∑–∞ –ø–æ—Å–ª–µ–¥–Ω–∏–µ 7-14 –¥–Ω–µ–π
# –ü–ª—é—Å –ø—Ä–æ–≥–Ω–æ–∑ –ø–æ–≥–æ–¥—ã –Ω–∞ 3 –¥–Ω—è –≤–ø–µ—Ä–µ–¥
# –ü–ª—é—Å –∫–∞–ª–µ–Ω–¥–∞—Ä–Ω–∞—è –∏–Ω—Ñ–æ—Ä–º–∞—Ü–∏—è

# –°–µ–≥–æ–¥–Ω—è 2025-09-13 14:00
# –ù—É–∂–Ω–æ –ø—Ä–µ–¥—Å–∫–∞–∑–∞—Ç—å –Ω–∞ 2025-09-14 00:00 –¥–æ 2025-09-16 23:00
# –¢—Ä–µ–±—É—é—Ç—Å—è:
# 1. –î–∞–Ω–Ω—ã–µ —Å 2025-09-06 00:00 –ø–æ 2025-09-13 14:00 (–∏—Å—Ç–æ—Ä–∏—è)
# 2. –ü—Ä–æ–≥–Ω–æ–∑ –ø–æ–≥–æ–¥—ã –Ω–∞ 2025-09-14 00:00 - 2025-09-16 23:00
# 3. –ö–∞–ª–µ–Ω–¥–∞—Ä–Ω–∞—è –∏–Ω—Ñ–æ—Ä–º–∞—Ü–∏—è


import pandas as pd
import numpy as np
from catboost import CatBoostRegressor
import matplotlib.pyplot as plt
from datetime import datetime, timedelta

# === –ö–û–ù–°–¢–ê–ù–¢–´ ===
MODEL_PATH = 'energy_forecast_model.cbm'
FILTERED_DATA_FILE = 'filtered_training_data.csv'  # –î–∞–Ω–Ω—ã–µ –±–µ–∑ —Å–µ–Ω—Ç—è–±—Ä—è 2025
HISTORICAL_DATA_FILE = 'processed_energy_data.csv'  # –í—Å–µ –¥–∞–Ω–Ω—ã–µ (–≤–∫–ª—é—á–∞—è —Å–µ–Ω—Ç—è–±—Ä—å)
TEST_START_DATE = '2025-09-13'  # –î–∞—Ç–∞ –Ω–∞—á–∞–ª–∞ —Ç–µ—Å—Ç–∏—Ä–æ–≤–∞–Ω–∏—è
TEST_DAYS = 3  # –ö–æ–ª–∏—á–µ—Å—Ç–≤–æ –¥–Ω–µ–π –¥–ª—è –ø—Ä–µ–¥—Å–∫–∞–∑–∞–Ω–∏—è

def load_model():
    """–ó–∞–≥—Ä—É–∑–∫–∞ –æ–±—É—á–µ–Ω–Ω–æ–π –º–æ–¥–µ–ª–∏"""
    model = CatBoostRegressor()
    model.load_model(MODEL_PATH)
    return model

def calculate_rolling_features(consumption_series, window):
    """–†–∞—Å—á–µ—Ç —Å–∫–æ–ª—å–∑—è—â–∏—Ö –ø—Ä–∏–∑–Ω–∞–∫–æ–≤"""
    if len(consumption_series) < window:
        return np.nan, np.nan
    
    mean_val = np.mean(consumption_series[-window:])
    std_val = np.std(consumption_series[-window:]) if window > 1 else 0
    return mean_val, std_val

def prepare_features_for_prediction(df_historical, prediction_datetime, weather_data):
    """–ü–æ–¥–≥–æ—Ç–æ–≤–∫–∞ –ø—Ä–∏–∑–Ω–∞–∫–æ–≤ –¥–ª—è –æ–¥–Ω–æ–≥–æ –ø—Ä–µ–¥—Å–∫–∞–∑–∞–Ω–∏—è"""
    
    # –ë–∞–∑–æ–≤—ã–µ –≤—Ä–µ–º–µ–Ω–Ω—ã–µ –ø—Ä–∏–∑–Ω–∞–∫–∏
    features = {
        'hour': prediction_datetime.hour,
        'dayofweek': prediction_datetime.weekday(),
        'month': prediction_datetime.month,
    }
    
    # –ü–æ–≥–æ–¥–Ω—ã–µ –¥–∞–Ω–Ω—ã–µ
    features.update({
        'temperature': weather_data.get('temperature', 10.0),  # –¥–µ—Ñ–æ–ª—Ç–Ω—ã–µ –∑–Ω–∞—á–µ–Ω–∏—è
        'humidity': weather_data.get('humidity', 70.0),
        'wind_speed': weather_data.get('wind_speed', 3.0),
    })
    
    # –õ–∞–≥–æ–≤—ã–µ –ø—Ä–∏–∑–Ω–∞–∫–∏ (–±–µ—Ä–µ–º –∏–∑ –∏—Å—Ç–æ—Ä–∏—á–µ—Å–∫–∏—Ö –¥–∞–Ω–Ω—ã—Ö)
    for lag in [1, 2, 3, 24, 48, 168]:
        lag_time = prediction_datetime - timedelta(hours=lag)
        lag_data = df_historical[df_historical['datetime'] == lag_time]
        if len(lag_data) > 0:
            features[f'consumption_lag_{lag}'] = lag_data['consumption'].iloc[0]
        else:
            features[f'consumption_lag_{lag}'] = np.nan  # –ë—É–¥–µ—Ç –æ–±—Ä–∞–±–æ—Ç–∞–Ω–æ –ø–æ–∑–∂–µ
    
    # –°–∫–æ–ª—å–∑—è—â–∏–µ –ø—Ä–∏–∑–Ω–∞–∫–∏
    for window in [3, 6, 12, 24]:
        # –ë–µ—Ä–µ–º –ø–æ—Å–ª–µ–¥–Ω–∏–µ window –∑–Ω–∞—á–µ–Ω–∏–π
        recent_data = df_historical[
            df_historical['datetime'] < prediction_datetime
        ].tail(window)
        
        if len(recent_data) >= window:
            mean_val, std_val = calculate_rolling_features(
                recent_data['consumption'].values, window
            )
            features[f'consumption_rolling_mean_{window}'] = mean_val
            features[f'consumption_rolling_std_{window}'] = std_val
        else:
            features[f'consumption_rolling_mean_{window}'] = np.nan
            features[f'consumption_rolling_std_{window}'] = np.nan
    
    # –ö–∞–ª–µ–Ω–¥–∞—Ä–Ω—ã–µ –ø—Ä–∏–∑–Ω–∞–∫–∏
    date_only = prediction_datetime.date()
    calendar_data = df_historical[df_historical['date_only'] == date_only]
    
    if len(calendar_data) > 0:
        calendar_row = calendar_data.iloc[0]
        features.update({
            'is_holiday': calendar_row.get('is_holiday', 0),
            'is_working_weekend': calendar_row.get('is_working_weekend', 0),
            'is_regular_weekend': calendar_row.get('is_regular_weekend', 0),
            'is_working_day': calendar_row.get('is_working_day', 0),
            'is_weekend_or_holiday': calendar_row.get('is_weekend_or_holiday', 0),
            'is_weekend': calendar_row.get('is_weekend', 0),
        })
    else:
        # –î–µ—Ñ–æ–ª—Ç–Ω—ã–µ –∑–Ω–∞—á–µ–Ω–∏—è
        features.update({
            'is_holiday': 0,
            'is_working_weekend': 0,
            'is_regular_weekend': int(prediction_datetime.weekday() in [5, 6]),
            'is_working_day': int(prediction_datetime.weekday() not in [5, 6]),
            'is_weekend_or_holiday': int(prediction_datetime.weekday() in [5, 6]),
            'is_weekend': int(prediction_datetime.weekday() in [5, 6]),
        })
    
    return features

def retrospective_test():
    """–†–µ—Ç—Ä–æ—Å–ø–µ–∫—Ç–∏–≤–Ω–æ–µ —Ç–µ—Å—Ç–∏—Ä–æ–≤–∞–Ω–∏–µ –Ω–∞ —Å–µ–Ω—Ç—è–±—Ä—å 2025"""
    
    print("=== –†–ï–¢–†–û–°–ü–ï–ö–¢–ò–í–ù–û–ï –¢–ï–°–¢–ò–†–û–í–ê–ù–ò–ï ===")
    
    # –ó–∞–≥—Ä—É–∑–∫–∞ –º–æ–¥–µ–ª–∏
    model = load_model()
    print("–ú–æ–¥–µ–ª—å –∑–∞–≥—Ä—É–∂–µ–Ω–∞")
    
    # –ó–∞–≥—Ä—É–∑–∫–∞ –∏—Å—Ç–æ—Ä–∏—á–µ—Å–∫–∏—Ö –¥–∞–Ω–Ω—ã—Ö (–≤–∫–ª—é—á–∞—è —Å–µ–Ω—Ç—è–±—Ä—å 2025)
    df_historical = pd.read_csv(HISTORICAL_DATA_FILE)
    df_historical['datetime'] = pd.to_datetime(df_historical['datetime'])
    df_historical['date_only'] = df_historical['datetime'].dt.date
    print(f"–ò—Å—Ç–æ—Ä–∏—á–µ—Å–∫–∏–µ –¥–∞–Ω–Ω—ã–µ –∑–∞–≥—Ä—É–∂–µ–Ω—ã: {len(df_historical)} –∑–∞–ø–∏—Å–µ–π")
    
    # –û–ø—Ä–µ–¥–µ–ª—è–µ–º –ø–µ—Ä–∏–æ–¥ —Ç–µ—Å—Ç–∏—Ä–æ–≤–∞–Ω–∏—è
    test_start = datetime.strptime(TEST_START_DATE, '%Y-%m-%d')
    test_end = test_start + timedelta(days=TEST_DAYS)
    
    print(f"–¢–µ—Å—Ç–∏—Ä–æ–≤–∞–Ω–∏–µ —Å {test_start} –ø–æ {test_end}")
    
    # –§–∏–ª—å—Ç—Ä—É–µ–º –¥–∞–Ω–Ω—ã–µ –¥–æ —Ç–µ—Å—Ç–æ–≤–æ–≥–æ –ø–µ—Ä–∏–æ–¥–∞
    training_data = df_historical[df_historical['datetime'] < test_start]
    test_data = df_historical[
        (df_historical['datetime'] >= test_start) & 
        (df_historical['datetime'] < test_end)
    ]
    
    print(f"–î–∞–Ω–Ω—ã–µ –¥–ª—è –æ–±—É—á–µ–Ω–∏—è –ø—Ä–∏–∑–Ω–∞–∫–æ–≤: {len(training_data)} –∑–∞–ø–∏—Å–µ–π")
    print(f"–¢–µ—Å—Ç–æ–≤—ã–µ –¥–∞–Ω–Ω—ã–µ: {len(test_data)} –∑–∞–ø–∏—Å–µ–π")
    
    if len(test_data) == 0:
        print("–ù–µ—Ç —Ç–µ—Å—Ç–æ–≤—ã—Ö –¥–∞–Ω–Ω—ã—Ö!")
        return
    
    # –ü–æ–¥–≥–æ—Ç–æ–≤–∫–∞ –ø—Ä–µ–¥—Å–∫–∞–∑–∞–Ω–∏–π
    predictions = []
    actual_values = []
    prediction_times = []
    
    # –î–ª—è –∫–∞–∂–¥–æ–≥–æ —á–∞—Å–∞ –≤ —Ç–µ—Å—Ç–æ–≤–æ–º –ø–µ—Ä–∏–æ–¥–µ
    for idx, row in test_data.iterrows():
        prediction_time = row['datetime']
        actual_consumption = row['consumption']
        
        print(f"–ü—Ä–µ–¥—Å–∫–∞–∑–∞–Ω–∏–µ –¥–ª—è {prediction_time}: ", end="")
        
        # –ü–æ–¥–≥–æ—Ç–æ–≤–∫–∞ –ø–æ–≥–æ–¥–Ω—ã—Ö –¥–∞–Ω–Ω—ã—Ö (–±–µ—Ä–µ–º —Ä–µ–∞–ª—å–Ω—ã–µ)
        weather_data = {
            'temperature': row.get('temperature', 10.0),
            'humidity': row.get('humidity', 70.0),
            'wind_speed': row.get('wind_speed', 3.0),
        }
        
        # –ü–æ–¥–≥–æ—Ç–æ–≤–∫–∞ –ø—Ä–∏–∑–Ω–∞–∫–æ–≤
        features = prepare_features_for_prediction(
            training_data, prediction_time, weather_data
        )
        
        # –°–æ–∑–¥–∞–Ω–∏–µ DataFrame –¥–ª—è –ø—Ä–µ–¥—Å–∫–∞–∑–∞–Ω–∏—è
        features_df = pd.DataFrame([features])
        
        # –û–±—Ä–∞–±–æ—Ç–∫–∞ –ø—Ä–æ–ø—É—Å–∫–æ–≤ (–∑–∞–ø–æ–ª–Ω–µ–Ω–∏–µ –º–µ–¥–∏–∞–Ω–æ–π –∏–∑ –æ–±—É—á–∞—é—â–∏—Ö –¥–∞–Ω–Ω—ã—Ö)
        for col in features_df.columns:
            if features_df[col].isna().any():
                # –ò—â–µ–º –º–µ–¥–∏–∞–Ω—É –≤ –æ–±—É—á–∞—é—â–∏—Ö –¥–∞–Ω–Ω—ã—Ö
                if col in training_data.columns:
                    median_val = training_data[col].median()
                    features_df[col] = features_df[col].fillna(median_val)
                else:
                    features_df[col] = features_df[col].fillna(0)
        
        # –í—ã–ø–æ–ª–Ω–µ–Ω–∏–µ –ø—Ä–µ–¥—Å–∫–∞–∑–∞–Ω–∏—è
        try:
            prediction = model.predict(features_df)[0]
            predictions.append(prediction)
            actual_values.append(actual_consumption)
            prediction_times.append(prediction_time)
            
            print(f"–ø—Ä–µ–¥—Å–∫–∞–∑–∞–Ω–æ {prediction:.1f}, —Ä–µ–∞–ª—å–Ω–æ {actual_consumption:.1f}")
            
        except Exception as e:
            print(f"–æ—à–∏–±–∫–∞: {e}")
            continue
    
    # –û—Ü–µ–Ω–∫–∞ –∫–∞—á–µ—Å—Ç–≤–∞
    if len(predictions) > 0:
        from sklearn.metrics import mean_absolute_error, mean_absolute_percentage_error
        
        mae = mean_absolute_error(actual_values, predictions)
        mape = mean_absolute_percentage_error(actual_values, predictions) * 100
        
        print(f"\n=== –†–ï–ó–£–õ–¨–¢–ê–¢–´ –¢–ï–°–¢–ò–†–û–í–ê–ù–ò–Ø ===")
        print(f"–ö–æ–ª–∏—á–µ—Å—Ç–≤–æ –ø—Ä–µ–¥—Å–∫–∞–∑–∞–Ω–∏–π: {len(predictions)}")
        print(f"MAE: {mae:.3f}")
        print(f"MAPE: {mape:.2f}%")
        print(f"–°—Ä–µ–¥–Ω–µ–µ –ø–æ—Ç—Ä–µ–±–ª–µ–Ω–∏–µ: {np.mean(actual_values):.1f}")
        print(f"–¢–æ—á–Ω–æ—Å—Ç—å (¬±2.5% –æ—Ç —Å—Ä–µ–¥–Ω–µ–≥–æ): {mae < (np.mean(actual_values) * 0.025)}")
        
        # –í–∏–∑—É–∞–ª–∏–∑–∞—Ü–∏—è
        plt.figure(figsize=(15, 8))
        
        plt.subplot(2, 1, 1)
        plt.plot(prediction_times, actual_values, 'b-', label='–†–µ–∞–ª—å–Ω–æ–µ', linewidth=2)
        plt.plot(prediction_times, predictions, 'r--', label='–ü—Ä–µ–¥—Å–∫–∞–∑–∞–Ω–Ω–æ–µ', linewidth=2)
        plt.title(f'–†–µ—Ç—Ä–æ—Å–ø–µ–∫—Ç–∏–≤–Ω–æ–µ —Ç–µ—Å—Ç–∏—Ä–æ–≤–∞–Ω–∏–µ ({TEST_START_DATE} + {TEST_DAYS} –¥–Ω–µ–π)')
        plt.ylabel('–ü–æ—Ç—Ä–µ–±–ª–µ–Ω–∏–µ (–ú–í—Ç)')
        plt.legend()
        plt.grid(True, alpha=0.3)
        
        plt.subplot(2, 1, 2)
        errors = np.abs(np.array(actual_values) - np.array(predictions))
        plt.plot(prediction_times, errors, 'g-', alpha=0.7)
        plt.title(f'–ê–±—Å–æ–ª—é—Ç–Ω—ã–µ –æ—à–∏–±–∫–∏ (MAE = {mae:.3f})')
        plt.ylabel('–û—à–∏–±–∫–∞ (–ú–í—Ç)')
        plt.xlabel('–í—Ä–µ–º—è')
        plt.grid(True, alpha=0.3)
        
        plt.tight_layout()
        plt.savefig('retrospective_test_results.png', dpi=300, bbox_inches='tight')
        plt.show()
        
        # –°–æ—Ö—Ä–∞–Ω–µ–Ω–∏–µ —Ä–µ–∑—É–ª—å—Ç–∞—Ç–æ–≤
        results_df = pd.DataFrame({
            'datetime': prediction_times,
            'actual_consumption': actual_values,
            'predicted_consumption': predictions,
            'absolute_error': errors
        })
        results_df.to_csv('retrospective_test_detailed.csv', index=False)
        print("–î–µ—Ç–∞–ª—å–Ω—ã–µ —Ä–µ–∑—É–ª—å—Ç–∞—Ç—ã —Å–æ—Ö—Ä–∞–Ω–µ–Ω—ã –≤ retrospective_test_detailed.csv")
        
    else:
        print("–ù–µ —É–¥–∞–ª–æ—Å—å –≤—ã–ø–æ–ª–Ω–∏—Ç—å –Ω–∏ –æ–¥–Ω–æ–≥–æ –ø—Ä–µ–¥—Å–∫–∞–∑–∞–Ω–∏—è!")

def explain_prediction_requirements():
    """–û–±—ä—è—Å–Ω–µ–Ω–∏–µ —Ç—Ä–µ–±–æ–≤–∞–Ω–∏–π –¥–ª—è –ø—Ä–µ–¥—Å–∫–∞–∑–∞–Ω–∏–π"""
    print("\n" + "="*70)
    print("–¢–†–ï–ë–û–í–ê–ù–ò–Ø –î–õ–Ø –ü–†–ï–î–°–ö–ê–ó–ê–ù–ò–ô –ù–ê 1-3 –î–ù–Ø")
    print("="*70)
    
    print("""
üïí –ú–ò–ù–ò–ú–ê–õ–¨–ù–´–ô –ü–ï–†–ò–û–î –ò–°–¢–û–†–ò–ß–ï–°–ö–ò–• –î–ê–ù–ù–´–•:
‚Ä¢ –î–ª—è –ø—Ä–µ–¥—Å–∫–∞–∑–∞–Ω–∏—è –Ω–∞ 1-3 –¥–Ω—è –Ω—É–∂–Ω–æ –º–∏–Ω–∏–º—É–º 7 –¥–Ω–µ–π (168 —á–∞—Å–æ–≤) –∏—Å—Ç–æ—Ä–∏–∏
‚Ä¢ –û–ø—Ç–∏–º–∞–ª—å–Ω–æ: 14 –¥–Ω–µ–π –¥–ª—è –ª—É—á—à–µ–π —Ç–æ—á–Ω–æ—Å—Ç–∏ —Å–∫–æ–ª—å–∑—è—â–∏—Ö —Å—Ä–µ–¥–Ω–∏—Ö

